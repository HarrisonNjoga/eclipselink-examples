<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="employee-pu">
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.logging.thread" value="false" />
			<property name="eclipselink.logging.session" value="false" />
			<property name="eclipselink.logging.exceptions" value="false" />
			<property name="eclipselink.logging.timestamp" value="false"/>

			<!-- load mapping metadata from sessions.xml and associated deployment xml -->
			<property name="eclipselink.session-name" value="employee" />
			<property name="eclipselink.sessions-xml" value="sessions.xml" />	
			
			<!-- Set weaving=true so an exception is thrown if not possible. -->
			<property name="eclipselink.weaving" value="true"/>	
		</properties>
	</persistence-unit>
</persistence>