<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_2_0.xsd" version="2.0">
    <persistence-unit name="jpars_booking_example_pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>main.java.eclipselink.examples.jpars.model.Address</class>
        <class>main.java.eclipselink.examples.jpars.model.CarReservation</class>
        <class>main.java.eclipselink.examples.jpars.model.FlightReservation</class>
        <class>main.java.eclipselink.examples.jpars.model.HoetelReservation</class>
        <class>main.java.eclipselink.examples.jpars.model.TravelBooking</class>
        <exclude-unlisted-classes/>
        <properties>
            <property name="javax.persistence.nonJtaDataSource" value="jdbc/JPARSBookingDS"/>
            <property name="eclipselink.logging.level" value="FINEST"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.target-server" value="Glassfish"/>
        </properties>
    </persistence-unit>
</persistence>
