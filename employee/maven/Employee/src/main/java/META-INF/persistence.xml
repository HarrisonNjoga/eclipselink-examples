<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="employee" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>org.eclipse.persistence.example.jpa.employee.Project</class>
		<class>org.eclipse.persistence.example.jpa.employee.Address</class>
		<class>org.eclipse.persistence.example.jpa.employee.Employee</class>
		<class>org.eclipse.persistence.example.jpa.employee.PhoneNumber</class>
		<class>org.eclipse.persistence.example.jpa.employee.EmploymentPeriod</class>
		<class>org.eclipse.persistence.example.jpa.employee.LargeProject</class>
		<class>org.eclipse.persistence.example.jpa.employee.SmallProject</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/test"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="password"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="eclipselink.logging.level" value="FINE"/>
			<property name="eclipselink.logging.timestamp" value="false"/>
			<property name="eclipselink.logging.thread" value="false"/>
			<property name="eclipselink.logging.session" value="false"/>
			<property name="eclipselink.logging.exceptions" value="false"/>
			<property name="eclipselink.logging.connection" value="false"/>
			<property name="eclipselink.logging.metadata" value="WARNING"/>
		</properties>
	</persistence-unit>
</persistence>
